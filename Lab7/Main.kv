ScreenManager:
    RegistrationScreen:
        name: 'registration'
    MenuScreen:
        name: 'menu'
    ProfileScreen:
        name: 'profile'
    AboutUsScreen:
        name: 'about us'
    BattlesScreen:
        name: 'battles'
    CalculatorScreen:
        name: 'calculator'

<RegistrationScreen>:
    MDCard:
        size_hint: None, None
        size: 400, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "Welcome to Bauman's Gate"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextFieldRound:
            id: user
            hint_text: "Login"
            icon_right: "account"
            size_hint_x: None
            width: 250
            font_size: 25
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: password
            hint_text: "Password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 250
            font_size: 25
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "Log In"
            font_size: 20
            pos_hint: {"center_x": 0.5}
            on_press: app.switch_to_menu()

        MDRoundFlatButton:
            text: "Reset"
            font_size: 20
            pos_hint: {"center_x": 0.5}
            on_release: app.reset_fields()

        Widget:
            size_hint_y: None
            height: 10

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            id: name
            text: "Welcome back"
            halign: "center"

        MDBottomNavigation:

            MDBottomNavigationItem:
                name: 'screen 1'
                text: "Profile"
                icon: "account-cog"
                on_tab_release: app.root.current = "profile"


            MDBottomNavigationItem:
                name: 'screen 2'
                text: "Calculator"
                icon: "calculator"
                on_tab_release: app.root.current = "calculator"

            MDBottomNavigationItem:
                name: 'screen 3'
                text: "Battles"
                icon: "fencing"
                on_tab_release: app.root.current = "battles"



            MDBottomNavigationItem:
                name: 'screen 4'
                text: "About us"
                icon: "information"
                on_tab_release: app.root.current = "about us"


            MDBottomNavigationItem:
                name: 'screen 5'
                text: "Log out"
                icon: "logout"
                on_tab_release: app.root.current = "registration"


<ProfileScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [10, 50, 10, 10]
        spacing: 20

        Widget:
            size_hint_y: 1

        MDLabel:
            id: profile_label
            text: "Profile Information"
            halign: "center"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            valign: "middle"
        Widget:
            size_hint_y: 1

        MDRoundFlatButton:
            text: "Back to Menu"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = 'menu'
        Widget:
            size_hint_y: 1


<AboutUsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [10, 50, 10, 10]
        spacing: 20
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Widget:
            size_hint_y: 1

        Image:
            source: 'amogus.png'
            size_hint: None, None
            size: 200, 200
            pos_hint: {"center_x": 0.5}

        Widget:
            size_hint_y: 0.1

        MDLabel:
            text: "IU3 Secret Labs LTD"
            halign: "center"
            font_style: "H5"
            size_hint_y: None
            height: self.texture_size[1]
            valign: "middle"

        Widget:
            size_hint_y: 0.1

        MDRoundFlatButton:
            text: "Back to Menu"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = 'menu'

        Widget:
            size_hint_y: 1

<BattlesScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [10, 50, 10, 10]
        spacing: 20
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Widget:
            size_hint_y: 1

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20
            size_hint_y: None
            height: 200

            BoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                width: 200
                height: 200

                Image:
                    source: 'battle2.jpg'
                    size_hint: None, None
                    size: 350, 350
                    pos_hint: {"center_x": 0.6}

                MDLabel:
                    text: "Semen VS Vovandopula"
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]

            BoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                width: 200
                height: 200

                Image:
                    source: 'battle.jpg'
                    size_hint: None, None
                    size: 350, 350
                    pos_hint: {"center_x": 2.2}

                MDLabel:
                    text: "Semen VS MicroDimid"
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {"center_x": 2.2}

        Widget:
            size_hint_y: 0.1

        MDRoundFlatButton:
            text: "Back to Menu"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = 'menu'

        Widget:
            size_hint_y: 1

<CalculatorScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [10, 50, 10, 10]
        spacing: 20

        Widget:
            size_hint_y: 0.2

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 44

            MDLabel:
                text: "Unit 1"
                size_hint_x: None
                width: 100
                halign: 'right'

            MDDropDownItem:
                id: unit1
                text: "Select unit"
                size_hint_x: None
                width: 200  # Установите ширину выпадающего списка
                pos_hint: {"center_x": 0.5}
                on_release: app.open_dropdown(self)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 44

            MDLabel:
                text: "Unit 2"
                size_hint_x: None
                width: 100
                halign: 'right'

            MDDropDownItem:
                id: unit2
                text: "Select unit"
                size_hint_x: None
                width: 200
                pos_hint: {"center_x": 0.5}
                on_release: app.open_dropdown(self)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 44

            MDLabel:
                text: "Unit 3"
                size_hint_x: None
                width: 100
                halign: 'right'

            MDDropDownItem:
                id: unit3
                text: "Select unit"
                size_hint_x: None
                width: 200
                pos_hint: {"center_x": 0.5}
                on_release: app.open_dropdown(self)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 44

            MDLabel:
                text: "Unit 4"
                size_hint_x: None
                width: 100
                halign: 'right'

            MDDropDownItem:
                id: unit4
                text: "Select unit"
                size_hint_x: None
                width: 200
                pos_hint: {"center_x": 0.5}
                on_release: app.open_dropdown(self)

        Widget:
            size_hint_y: 0.1

        MDRoundFlatButton:
            text: "Simulate event"
            pos_hint: {"center_x": 0.5}
            on_release: app.calculate_cost()

        MDRoundFlatButton:
            text: "Back to Menu"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = 'menu'

        Widget:
            size_hint_y: 0.2  # Расширяет виджет по вертикали, чтобы разместить элементы в центре





